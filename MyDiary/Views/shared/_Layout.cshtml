<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width ,initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body class="container">
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <div class="navbar-brand">
                        <a href="~/Home/Index">MyDiary</a>
                    </div>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @{
                                var UserName = Session["User"] == null ? string.Empty : ((MyDiary.Models.UserInfo) Session["User"]).UserName;
                            }
                            <a href="#">@UserName</a>
                        </li>
                        <li>
                           @if (Session["User"] == null)
                           {
                               <a href="~/Account/Login">Login</a>
                           }
                           else
                           {
                               <a href="~/Account/Logoff">Logoff</a>
                           }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="page-header">@ViewBag.Title</div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <nav class="navbar-default navbar-fixed-bottom text-center">
            &copy;@DateTime.Now.Year
        </nav>
    </footer>
</body>
</html>
