@model MyDiary.Models.UserInfo
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "请输入用户名!" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PassWord)
        @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", placeholder = "请输入密码!" })
    </div>
    <div class="btn-group pull-right">
        <button type="submit" class="btn btn-primary" id="btnRegister">Register</button>
        <button type="button" class="btn btn-default" id="btnLogin">Login</button>
    </div>
    <div class="clearfix">
    </div>
}
    <script>
       $(function () {
           $("#btnLogin").click(function () {
               location.href="@Url.Content("~/Account/Login")"
           });
       });
    </script>

